---
import Phone from "../ico/Phone.astro";
import Arrow from "../ico/ArrowIcon.astro";
---

<section id="call-to-action" class="mt-12">
  <div class="">
    <a
      href="/contacto"
      class="flex justify-between items-center rounded-xl p-4 w-full bg-[#303133] text-neutral-200 hover:text-[#FF7F50] transition group text-xl"
    >
      <span>Quiero mi Plan de Ataque</span>
      <span class="relative w-6 h-6 overflow-hidden">
        <!-- Phone: visible al inicio, sale hacia abajo -->
        <!-- <Phone
          class="absolute inset-0 transition-transform duration-300 ease-out will-change-transform group-hover:translate-y-full"
          color="white"
        /> -->

        <!-- Arrow: escondido arriba, entra “scrolleando” hacia abajo -->
        <Arrow
          class="-translate-x-0 transition group-hover:translate-x-0.5 absolute inset-0"
        />
      </span>
    </a>
  </div>
</section>
